<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>URL Shortener</h1>

    <div>
        <form method="POST" action="/url">
            <label>Enter your original URL</label>
            <input type="text" name="url" placeholder="https://www.example.com"/>   
            <button type="submit">Generate</button>
        </form>
    </div>

    <% if (locals.id) { %>
        <p>URL Generated: http://localhost:8000/url/<%= id %></p>
    <% } %>

    <div>
        <% if (locals.allUrl) { %>
          <table>
            <thead>
                <th>S. No.</th>
                <th>ShortId</th>
                <th>RedirectURL</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% allUrl.forEach((url, index) => { %>
                <tr>
                   <td><%= index+1 %></td>
                   <td><%= url.shortId %></td>
                   <td><%= url.redirectUrl %></td>
                   <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        <% } %>
    </div>

</body>
</html>